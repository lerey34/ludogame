  <body>
    <div id="main">
      <div id="board"></div>
      <div
        id="dice"
        style="
          background-image: url(/img/dice.gif);
          background-size: contain;
          width: 150px;
          height: 150px;
          float: left;
        "
      ></div>
      <!-- red pawns  start top 28 left 318-->
      <div
        class="pawns"
        id="redpawn1"
        style="background-color: red; top: 81.2px; left: 479.08px"
      ></div>
      <div
        class="pawns"
        id="redpawn2"
        style="background-color: red; top: 81.2px; left: 535.92px"
      ></div>
      <div
        class="pawns"
        id="redpawn3"
        style="background-color: red; top: 138.04px; left: 535.92px"
